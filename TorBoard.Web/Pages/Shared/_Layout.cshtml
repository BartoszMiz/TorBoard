<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>TorBorad - @ViewData["Title"]</title>

	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,700;1,300&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
	<link rel="stylesheet" href="./css/style.css">

	<script src="https://kit.fontawesome.com/b51f17e0bc.js" crossorigin="anonymous"></script>
	<script src="./js/navbar-expander.js" defer></script>
</head>
<body>
<header>
	@* <nav id="navbar"> *@
	@* 	<a class="nav-item navbar-brand" asp-page="/Index">TorBoard</a> *@
	@* 	<a class="nav-item" asp-page="/Index">Home</a> *@
	@* 	<a class="nav-item" asp-page="/Info">Info</a> *@
	@* 	<a class="nav-item" id="add-btn" asp-page="/PostForm"> *@
	@* 		<i class="fas fa-plus"></i> *@
	@* 	</a> *@
	@* </nav> *@

	<nav class="navbar">
		<div class="logo">
			<a class="logo-text" asp-page="/Index">TorBoard</a>
			<button class="navbar-btn" type="button" onclick="ToggleNavItems()">
				<i class="fas fa-bars"></i>
			</button>
		</div>
    	<ul class="navmenu">
            <li class="nav-item">
	            <a asp-page="/Index">
		            <i class="fas fa-home"></i>
		            Home
	            </a>
            </li>
	        <li class="nav-item">
		        <a asp-page="/Info">
			        <i class="fas fa-info"></i>
			        Info
		        </a>
	        </li>
	        <li class="nav-item" id="add-btn">
                <a asp-page="/PostForm">
                    <i class="fas fa-plus"></i>
                    New post
                </a>
            </li>
        </ul>
    </nav>
</header>

<main role="main">
	@RenderBody()
</main>

<footer>
	&copy; 2021 - TorBoard
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>
